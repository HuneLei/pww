.follow-page {
  background-color: white;
  /* border-top: 2rpx solid #eee; */
  border-bottom: 2rpx solid #ebebeb;
  padding: 0.2rem;
  font-size: 0.8rem;
  color: #444;
  position: fixed;
  width: 100%;
  text-align: center;
}

.follw-place-fist {
  text-align: center;
}

.follw-place-two {
  text-align: center;
  border-left: 2rpx solid #f2f2f2;
}

.follw-place-three {
  text-align: center;
  border-left: 2rpx solid #f2f2f2;
}

.msg-flex {
  margin-top: 0.6rem;
  background-color: white;
  display: flex;
  padding: 0.5rem;
}

.msg-flex image {
  margin-right: 0.6rem;
  width: 20rem;
  height: 6rem;
}

.view-text {
  font-size: 0.7rem;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 2rem;
}

.view-avatar {
  padding: 0.3rem 0 1rem 0;
}

.view-money {
  display: flex;
  justify-content: space-between;
}

.view-money-go {
  color: white;
  background-color: #ff7300;
  width: 4.5rem;
  text-align: center;
  border-radius: 0.8rem;
  justify-content: center;
  display: flex;
}

.view-money-text {
  color: #ff7300;
  font-size: 0.7rem;
}

.view-money-text span {
  font-size: 1rem;
}

.sort-select-view {
  background-color: white;
  width: 100%;
  z-index: 2010;
  position: absolute;
  top: 1.80rem;
  left: 0;
  overflow-y: hidden;
}

.date-select-view {
  background-color: white;
  width: 100%;
  z-index: 2010;
  position: absolute;
  top: 1.80rem;
  left: 0;
  overflow-y: hidden;
  line-height: 2;
}

.sort-select-view ul {
  width: 100%;
}

.sort-select-view ul li {
  font-size: 0.8rem;
  padding: 0.2rem 0.7rem;
  white-space: nowrap;
  overflow: hidden;
  margin: 0 0.4rem;
  display: flex;
  justify-content: space-between;
}

.sort-select-box {
  background-color: rgba(0, 0, 0, 0.65);
  width: 100%;
  z-index: 2009;
  position: absolute;
  top: 2.12rem;
  left: 0;
  height: 1126rpx;
  overflow-y: hidden;
}

.weui-flex {
  text-align: center;
}

.date-select-day {
  margin: 0.2rem 0.5rem 0.8rem;
  font-size: 0.85rem;
  color: #222;
}

.date-select-day span {
  font-size: 0.6rem;
}

.date-place button {
  padding: 0em 1.5em;
  color: #222;
  background-image:"../../image/gouxuan.png";
}

.date-place button:active {
  background-color: #ececec;
}

.date-place-button {
  text-align: center;
  display: flex;
  justify-content: space-around;
}

.date-place-button .date-clear {
  color: #f60;
  border: 1px solid #f60;
}

.date-place-button .date-sure {
  color: white;
  background: #f60;
}

.date-place-button .date-clear:active {
  background-color: white;
}

.date-place-button .date-sure:active {
  background-color: #f60;
}
