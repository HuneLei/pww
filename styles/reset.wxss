html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  overflow-x: hidden;
  color: #222;
  font-size: 14px;
  background-color: #f8f8f8;
}

input, select, textarea, label {
  font-family: 'Microsoft YaHei',
                 '微软雅黑',
                 'Helvetica Neue',
                 Helvetica,
                 Arial,
                 'PingFang SC',
                 'Hiragino Sans GB',
                 sans-serif;
}

a {
  text-decoration: none;
}

ul, ol {
  list-style: none;
}

html, body, div, h1, h2, h3, h4, h5, h6, p, dl, dt, dd, ol, ul, li, fieldset,
form, label, input, legend, table, caption, tbody, tfoot, thead, tr, th, td,
textarea, article, aside, audio, canvas, figure, footer, header, mark, menu, nav,
section, time, video {
  margin: 0;
  padding: 0;
}

